<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@drawable/rounder_radius">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeAble"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/circularimage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/eminem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="The Weekend"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/shapeAble"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/starBoy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StarBoy"
                android:layout_marginStart="5dp"
                android:textColor="#8AF9F8FF"
                android:layout_marginTop="-5dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/eminem"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/shapeAble"
                app:layout_constraintTop_toBottomOf="@id/eminem" />

            <ProgressBar
                android:id="@+id/playBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_baseline_play_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/shapeAble" />
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>